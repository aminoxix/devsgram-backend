generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String  @id @default(cuid())
  email        String  @unique
  hashPassword String
  username     String?
  posts        Post[]

  @@map("users")
}

model Post {
  id        String  @id @default(cuid())
  title     String
  content   String
  assets    String[]
  tags      String[]
  published Boolean @default(false)
  authorId  String
  Author    User    @relation(fields: [authorId], references: [id])

  @@map("posts")
}
